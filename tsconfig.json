{
    "compilerOptions": {
        "noErrorTruncation": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "strict": false,
        "skipLibCheck": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": ["es2020"]
    },
    "exclude": ["node_modules", "dist", "src/examples"]
}
